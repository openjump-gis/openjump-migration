<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">
  <packs>
    <pack name="OpenJUMP" required="yes">
      <description>The core files needed for the application</description>
      <!--file src="test.zip" targetdir="${INSTALL_PATH}" override="true" unpack="true"/-->
      <fileset dir="pack0" targetdir="${INSTALL_PATH}" override="true"/>
<!-- copy script, mark it executable, excute during postinstall -->
      <file src="res/postinstall.sh" targetdir="$INSTALL_PATH/bin/" condition="izpack.linuxinstall|izpack.macinstall"/>
      <executable type="bin" stage="never" targetfile="$INSTALL_PATH/bin/postinstall.sh" condition="izpack.linuxinstall|izpack.macinstall"/>
      <executable targetfile="$INSTALL_PATH/bin/postinstall.sh" stage="postinstall" keep="true" condition="izpack.linuxinstall|izpack.macinstall"/>
<!-- app creation on mac only -->
      <file src="res/macinstall.sh" targetdir="$INSTALL_PATH/bin/" condition="izpack.macinstall"/>
      <executable type="bin" stage="never" targetfile="$INSTALL_PATH/bin/macinstall.sh" condition="izpack.macinstall"/>
      <executable targetfile="$INSTALL_PATH/bin/macinstall.sh" stage="postinstall" keep="true" condition="izpack.macinstall"/>
<!-- refresh desktop to show icon on windows -->
      <file src="res/desktoprefresh.exe" targetdir="$INSTALL_PATH/bin/" condition="izpack.windowsinstall"/>
      <executable targetfile="$INSTALL_PATH/bin/desktoprefresh.exe" stage="postinstall" keep="false" condition="izpack.windowsinstall"/>
    </pack>
  </packs>
</installation>