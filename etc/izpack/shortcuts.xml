<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="${APP_NAME} ${APP_VER}"
                location="applications"/>

      <shortcut
         name="${APP_NAME} ${APP_VER}"
         programGroup="yes"
         desktop="yes"
         applications="no"
         startMenu="no"
         startup="no"
         target="$INSTALL_PATH\bin\oj_windows.bat"
         commandLine=""
         description="OpenJUMP launcher"
         iconFile="$INSTALL_PATH\lib\icons\oj.ico"
         iconIndex="0"
         initialState="noShow">

         <createForPack name="OpenJUMP"/>

       </shortcut>
 
    <shortcut
            name="OJ Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\bin\oj_windows.bat"
            commandLine="--uninstall"
            iconFile="%SystemRoot%\system32\SHELL32.dll"
            iconIndex="31"
            description="This uninstalls OJ">

    <createForPack name="OpenJUMP"/>
  </shortcut>
</shortcuts>