<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputFileNameMapping>${artifactId}-${version}.${extension}</outputFileNameMapping>
      <outputDirectory>${snapId}/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>scripts</directory>
      <outputDirectory>${snapId}/bin</outputDirectory>
      <fileMode>755</fileMode>
      <includes>
        <include>**</include>
      </includes>
      <excludes>
        <exclude>*.xml</exclude>
      </excludes>      
    </fileSet>
    <fileSet>
      <directory>scripts</directory>
      <outputDirectory>${snapId}/bin</outputDirectory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>etc</directory>
      <outputDirectory>${snapId}/bin</outputDirectory>
      <includes>
        <include>log4j.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>lib</directory>
      <outputDirectory>${snapId}/lib</outputDirectory>
    </fileSet>
<!--
    <fileSet>
      <directory>docs</directory>
      <excludes>
        <exclude>**/*.doc</exclude>
      </excludes>
      <outputDirectory>${snapId}/docs</outputDirectory>
    </fileSet>
-->
    <fileSet>
      <directory>etc</directory>
      <outputDirectory>${snapId}/</outputDirectory>
      <includes>
        <include>readme.txt</include>
        <include>licenses/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>